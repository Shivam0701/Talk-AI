PORT=5000
CLIENT_ORIGIN=http://localhost:5173
MONGO_URI=mongodb://127.0.0.1:27017/ai-companion

JWT_SECRET=change_me_super_secret
JWT_EXPIRES_IN=7d

# Hidden admin credentials (NO UI toggle; same login form)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change_me_admin_password

# Google auth (verified emails)
GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
# If true, disables password signup/login and requires Google sign-in for users
REQUIRE_GOOGLE_AUTH=false
# If true, only allow @gmail.com accounts (still verified by Google)
GMAIL_ONLY=false

# AI provider: openai OR openrouter
AI_PROVIDER=openai
AI_API_KEY=your_key_here
AI_MODEL=gpt-4o-mini

# Optional (OpenRouter best practice)
OPENROUTER_SITE_URL=http://localhost:5173
OPENROUTER_APP_NAME=AI Companion V1

DAILY_MESSAGE_LIMIT=40

